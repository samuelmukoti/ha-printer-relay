{
  "name": "RelayPrint",
  "version": "0.1.21g",
  "slug": "relay_print",
  "description": "Home Assistant add-on to replace Google Cloud Print with local and remote printing capabilities.",
  "url": "https://github.com/samuelmukoti/ha-printer-relay",
  "startup": "services",
  "boot": "auto",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "init": false,
  "ports": {
    "631/tcp": 631,
    "5353/udp": 5353,
    "7779/tcp": 7779
  },
  "ports_description": {
    "631/tcp": "CUPS print server",
    "5353/udp": "Avahi/mDNS service discovery",
    "7779/tcp": "RelayPrint API (for mobile app)"
  },
  "ingress": true,
  "ingress_port": 7779,
  "panel_icon": "mdi:printer",
  "panel_title": "RelayPrint",
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "apparmor": false,
  "privileged": ["NET_ADMIN"],
  "devices": ["/dev/bus/usb:/dev/bus/usb:rwm"],
  "map": ["config:rw"],
  "auth_api": true,
  "stdin": true,
  "stdin_open": true,
  "options": {
    "log_level": "info",
    "cups_admin_user": "admin",
    "cups_admin_password": "changeme",
    "printer_options": {
      "default_media": "A4",
      "color_mode": "color",
      "duplex": false
    },
    "advanced": {
      "cups_timeout": 30,
      "job_retention": 24,
      "max_jobs": 100
    },
    "tunnel": {
      "enabled": false,
      "provider": "localtunnel",
      "tunnel_token": "",
      "tunnel_url": ""
    }
  },
  "schema": {
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)",
    "cups_admin_user": "str",
    "cups_admin_password": "password",
    "printer_options": {
      "default_media": "list(A4|Letter|Legal)",
      "color_mode": "list(color|monochrome)",
      "duplex": "bool"
    },
    "advanced": {
      "cups_timeout": "int(10,300)",
      "job_retention": "int(1,168)",
      "max_jobs": "int(10,1000)"
    },
    "tunnel": {
      "enabled": "bool?",
      "provider": "str?",
      "tunnel_token": "str?",
      "tunnel_url": "str?"
    }
  }
}

{
  "name": "RelayPrint Server",
  "version": "0.1.0",
  "slug": "relayprint_server",
  "description": "Home Assistant add-on to relay print jobs via CUPS and secure tunnels.",
  "url": "https://github.com/samuelmukoti/ha-printer-relay",
  "startup": "services",
  "boot": "auto",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "init": false,
  "ports": {
    "631/tcp": 631,
    "5353/udp": 5353
  },
  "ports_description": {
    "631/tcp": "CUPS print server (REQUIRED)",
    "5353/udp": "Avahi/mDNS service discovery (REQUIRED)"
  },
  "ingress": true,
  "ingress_port": 631,
  "panel_icon": "mdi:printer",
  "panel_title": "RelayPrint",
  "hassio_api": true,
  "hassio_role": "default",
  "host_network": true,
  "apparmor": true,
  "privileged": ["NET_ADMIN"],
  "devices": ["/dev/bus/usb:/dev/bus/usb:rwm"],
  "map": ["config:rw"],
  "options": {
    "ssl": true,
    "certfile": "fullchain.pem",
    "keyfile": "privkey.pem",
    "log_level": "info",
    "default_user": "admin",
    "remote_access": false,
    "allowed_interfaces": ["eth0", "wlan0"]
  },
  "schema": {
    "ssl": "bool",
    "certfile": "str",
    "keyfile": "str",
    "log_level": "list(trace|debug|info|notice|warning|error|fatal)",
    "default_user": "str",
    "remote_access": "bool",
    "allowed_interfaces": ["str"]
  }
}
